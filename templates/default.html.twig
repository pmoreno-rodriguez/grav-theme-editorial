{% extends 'partials/base.html.twig' %}

{% block content %}
	<header class="main">   
	{% if show_image and image %}
	    <span class="image main">
		{{ image.cropZoom(img_width, img_height).loading('lazy').decoding('async').html(page_title,page_title,'')|raw }}
	    </span>
	{% endif %}
	{% if show_title %}<h1>{{ page_title|e }}</h1>{% endif %}
    {% if page.header.subtitle %}{{ page.header.subtitle|markdown }}{% endif %}
	</header>
	<div>
		{% if header.page_index and page.children.visible|length > 0 %}
			<h2>{{ 'EDITORIAL.DEFAULT.PAGE_INDEX_TITLE'|t }}</h2>
			<div class="box">
				<dl>
					{% for child in page.children.visible if child.routable != false %}						
						<dt>
							<a href="{{ child.url }}">{{ child.title|e }}</a>
						</dt>
						{% if child.header.subtitle %}
                            <dd>{{ child.header.subtitle|markdown(false) }}</dd>
                        {% endif %}
					{% endfor %}
				</dl>
			</div>         
		{% endif %}
		{{ page.content|raw }}
	</div>
{% endblock %}
