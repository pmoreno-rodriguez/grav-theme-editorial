{# SET THEME OPTIONS #}
{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% set compress = theme_var('production-mode') ? '.min.css' : '.css' %}
{% set right_sidebar = theme_config.right_sidebar == true ? 'sidebar-right' : '' %}

{# SET DEFAULT GRAV LANGUAGE #}
{% set lang = grav.language.getActive ?: grav.config.site.default_lang %}

{# Canonical URL #}
{% set canonical_url = page.url(true, true) %}

{# Tile settings #}
{% set show_title = header_var('show_title')|defined(true) %}
{% set page_title = page.title %}

{# SET PAGE OPTIONS #}
{% set show_image = header_var('show_pageimage')|defined(true) %}
{% set image = page.media[header.featured_image] ?: page.media.images|first %}
{% set img_width = header_var('image_width')|default(1000) %}
{% set img_height = header_var('image_height')|default(300) %}

{# SET DEFAULT BLOG URL #}
{% set blog = page.find(header_var('blog_url', [page, blog])|defined(theme_var('blog-page'))) %}
{% endspaceless %}
<!DOCTYPE HTML>
<html lang="{{ lang }}">
<!-- HEAD SECTION -->
<head>
{{ include('partials/page-bits/head.html.twig', {favicon: favicon}) }}
{% block stylesheets %}
    {{ include('partials/page-bits/head-styles.html.twig', {compress: compress, google_fonts: google_fonts}) }}
{% endblock %}
{% block javascripts %}
    {{ include('partials/page-bits/head-scripts.html.twig') }}
{% endblock %}
{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<!-- BODY SECTION -->
<body class="is-preload {{ page.header.body_classes|e('html_attr') }} {{ right_sidebar }}">
    <!-- Wrapper -->
    <div id="wrapper">
    <!-- Main -->
        <main id="main">
            <div class="inner">
                <!-- Header -->
                {% block header %}
                    {{ include('partials/header.html.twig') }}
                {% endblock %}
                <!-- Content -->
                <section>
                    {% block messages %}
                        {{ include('partials/messages.html.twig', [], true, true) }}
                    {% endblock %}

                    {% block content %}{% endblock %}
                </section>
            </div>
        </main>
        {% block sidebar %}
            {{ include('partials/sidebar.html.twig') }}
        {% endblock %}
    </div>

    <a id="back-to-top" href="#" aria-label="{{ 'EDITORIAL.MISC.BACK_TO_TOP'|t }}" title="{{ 'EDITORIAL.MISC.BACK_TO_TOP'|t }}">
        <i class="fa fa-chevron-up"></i>
      </a>

    {% block bottom %}
    <!-- PAGE SCRIPTS -->
        {{ assets.js('bottom')|raw }}
    {% endblock %}
</body>
</html>
