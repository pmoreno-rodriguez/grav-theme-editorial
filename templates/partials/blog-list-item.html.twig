<article>
   {% if show_image and image %}
    <a href="{{ page.url }}" class="image">
        {{ image.cropZoom(416, 256).loading('lazy').decoding('async').attribute('width', '300').attribute('height', '300').html(page_title, page_title, '')|raw }}
    </a>
    {% endif %}
    <{{ Htag_title }}>{{ page_title|e }}</{{ Htag_title }}>
    <p class="data-post">
        {{ 'EDITORIAL.ITEM.POSTED_ON'|t }} {{ datestamp }}
    </p>
    <p>
    {% if page.summary != page.content %}
            {{ page.summary|striptags|trim }}
        {% else %}
            {{ page.content|striptags|trim }}
        {% endif %}
    </p>
    <ul class="actions">
        <li><a href="{{ page.url }}" class="button" rel="nofollow">{{ readmore_txt|e }}</a></li>
    </ul>
</article>
